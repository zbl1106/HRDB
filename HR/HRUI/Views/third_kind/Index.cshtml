<script src="~/Scripts/jquery-1.11.1.js"></script>
<script src="~/Scripts/vue.js"></script>
<link href="~/css/table.css" rel="stylesheet" />
<div id="div1">
    <table width="100%">
        <tr>
            <td>
                <font color="black">
                    您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--III级机构设置
                </font>
            </td>
        </tr>
        <tr>
            <td align="right">
                <input type="button" value="添加" class="BUTTON_STYLE1"
                       onclick="window.location.href='Create'" />
            </td>
        </tr>
    </table>
    <table width="100%" border="1" cellpadding=0 cellspacing=1
           bordercolorlight=#848284 bordercolordark=#eeeeee
           class="TABLE_STYLE1">
        <tr>
            <td width="14%" class="TD_STYLE1">
                @Html.Label(" I级机构名称")
            </td>
            <td width="14%" class="TD_STYLE1">
                @Html.Label("II级机构名称")
            </td>
            <td width="14%" class="TD_STYLE1">
                @Html.Label("II级机构编号")
            </td>
            <td width="14%" class="TD_STYLE1">
                @Html.Label("III级机构名称")
            </td>
            <td width="17%" class="TD_STYLE1">
                @Html.Label("销售责任人编号")
            </td>
            <td width="17%" class="TD_STYLE1">
                @Html.Label("是否为零售店")
            </td>
            <td width="5%" class="TD_STYLE1">
                @Html.Label("变更")
            </td>
            <td width="5%" class="TD_STYLE1">
                @Html.Label("删除")
            </td>
        </tr>
        <tr v-for="(item,index) in dt">
            <td class="TD_STYLE2">
                {{item.first_kind_name}}
            </td>
            <td class="TD_STYLE2">
                {{item.second_kind_name}}
            </td>
            <td class="TD_STYLE2">
                {{item.second_kind_id}}
            </td>
            <td class="TD_STYLE2">
                {{item.third_kind_name}}
            </td>
            <td class="TD_STYLE2">
                {{item.third_kind_sale_id}}
            </td>
            <td class="TD_STYLE2">
                {{item.third_kind_is_retail}}
            </td>
            <td class="TD_STYLE2">
                <a v-bind:href="'/third_kind/Edit/'+[item.ftk_id]">变更</a>
            </td>
            <td class="TD_STYLE2">
                <a v-bind:href="'/third_kind/Delete/'+[item.ftk_id]" onclick="return confirm('确认删除吗?')">删除</a>
            </td>
        </tr>
    </table>
</div>
<script type="text/javascript">
    $(function () {
        var vm = new Vue({
            el: "#div1",
            data: { dt: null },
            methods: {
                load: function ()
                {
                    var t = this;
                    $.ajax({
                        url: "/third_kind/Index2",
                        type: "post",
                        success: function (msg)
                        {
                            t.dt = eval("(" + msg + ")");
                        }
                    });
                }
            },
            created: function () {
                this.load();
            }
        });
    })
</script>