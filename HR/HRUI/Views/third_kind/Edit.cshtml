@model HRModel.config_file_third_kind

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <table width="100%">
        <tr>
            <td>
                <font color="black">
                    您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--III级机构设置--III级机构变更
                </font>
            </td>
        </tr>
        <tr>
            <td align="right">
                <input type="submit" value="提交" class="BUTTON_STYLE1">
                <input type="button" value="返回" class="BUTTON_STYLE1" onclick="window.location.href='/third_kind/Index'">
            </td>
        </tr>
    </table>

    <table width="100%" border="1" cellpadding=0 cellspacing=1
           bordercolorlight=#848284 bordercolordark=#eeeeee
           class="TABLE_STYLE1">
        <tr style="display:none">
            <td>
                @Html.EditorFor(model => model.ftk_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ftk_id, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.EditorFor(model => model.second_kind_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.second_kind_id, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td width="19%" class="TD_STYLE1">
                I级机构名称
            </td>
            <td width="81%" class="TD_STYLE2">
                @Html.EditorFor(model => model.first_kind_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.first_kind_name, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td width="19%" class="TD_STYLE1">
                II级机构名称
            </td>
            <td width="81%" class="TD_STYLE2">
                @Html.EditorFor(model => model.second_kind_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.second_kind_name, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td width="19%" class="TD_STYLE1">
                III级机构编号
            </td>
            <td width="81%" class="TD_STYLE2">
                @Html.EditorFor(model => model.third_kind_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.third_kind_id, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                III级机构名称
            </td>
            <td class="TD_STYLE2">
                @Html.EditorFor(model => model.third_kind_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.third_kind_name, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                销售责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
            </td>
            <td class="TD_STYLE2">
                @Html.EditorFor(model => model.third_kind_sale_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.third_kind_sale_id, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                是否为零售店（是/否）
            </td>
            <td class="TD_STYLE2">
                @if (Model.third_kind_is_retail != null)
                {
                    if (Model.third_kind_is_retail == "是")
                    {
                        <select name="third_kind_is_retail">
                            <option selected="selected">是</option>
                            <option>否</option>
                        </select>
                    }
                    else
                    {
                        <select name="third_kind_is_retail">
                            <option>是</option>
                            <option selected="selected">否</option>
                        </select>
                    }

                }

            </td>
        </tr>
    </table>


}

