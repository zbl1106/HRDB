<script src="~/Scripts/jquery-1.11.1.js"></script>
<script src="~/Scripts/vue.js"></script>
<link href="~/css/table.css" rel="stylesheet" />
<div id="div1">
    <table width="100%">
        <tr>
            <td>
                <font color="black">
                    您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职称设置
                </font>
            </td>
        </tr>
        <tr>
            <td align="right">
            </td>
        </tr>
    </table>
    <table width="100%" border="1" cellpadding=0 cellspacing=1
           bordercolorlight=#848284 bordercolordark=#eeeeee
           class="TABLE_STYLE1">
        <tr>
            <td width="80%" class="TD_STYLE1">
                @Html.Label("职称名称")
            </td>
            <td width="20%" class="TD_STYLE1" align="center">
                @Html.Label("删除")
            </td>
        </tr>
        <tr v-for="(item,index) in dt">
            <td class="TD_STYLE2">
                {{item.attribute_name}}
            </td>
            <td class="TD_STYLE2" align="center">
                <a v-bind:href="'/config_public_char/Delete/'+[item.pbc_id]" onclick="return confirm('确认删除吗?')">删除</a>
            </td>
        </tr>
    </table>
</div>
<script>
    $(function () {
        var vm = new Vue({
            el: "#div1",
            data: { dt: null },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url:"/config_public_char/Index2",
                        type: "post",
                        success: function (msg)
                        {
                            t.dt = eval("(" + msg + ")");
                        }
                    })
                }
            },
             created: function () {
                this.load();
            }
        })
    });
</script>