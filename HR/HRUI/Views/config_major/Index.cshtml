<script src="~/Scripts/jquery-1.11.1.js"></script>
<script src="~/Scripts/vue.js"></script>
<link href="~/css/table.css" rel="stylesheet" />
<div id="div1">
    <table width="100%">
        <tr>
            <td>
                <font color="black">
                    您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位设置
                </font>
            </td>
        </tr>
        <tr>
            <td align="right">
                <input type="button" value="添加" class="BUTTON_STYLE1"
                       onclick="window.location.href='Create';">
            </td>
        </tr>
    </table>
    <table width="100%" border="1" cellpadding=0 cellspacing=1
           bordercolorlight=#848284 bordercolordark=#eeeeee
           class="TABLE_STYLE1">
        <tr>
            <td width="22%" class="TD_STYLE1">
                @Html.Label("职位分类编号")
            </td>
            <td width="23%" class="TD_STYLE1">
                @Html.Label("职位分类名称")
            </td>
            <td width="26%" class="TD_STYLE1">
                @Html.Label("职位编号")
            </td>
            <td width="24%" class="TD_STYLE1">
                @Html.Label("职位名称")
            </td>
            <td width="5%" class="TD_STYLE1">
                @Html.Label("删除")
            </td>
        </tr>
        <tr v-for="(item,index) in dt">
            <td class="TD_STYLE2">
                {{item.major_kind_id }}
            </td>
            <td class="TD_STYLE2">
                {{item.major_kind_name }}
            </td>
            <td class="TD_STYLE2">
                {{item.major_id }}
            </td>
            <td class="TD_STYLE2">
                {{item.major_name }}
            </td>
            <td class="TD_STYLE2">
                <a v-bind:href="'/config_major/Delete/'+[item.mak_id]" onclick="return confirm('确认删除吗?')">删除</a>
            </td>
        </tr>
    </table>
</div>
<script>
    $(function () {
        var vm = new Vue({
            el: "#div1",
            data: { dt: null },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/config_major/Index2",
                        type: "post",
                        success: function (msg) {
                            t.dt = eval("(" + msg + ")");
                        }
                    });
                }
            },
            created: function () {
                this.load();
            }
        });
    })
</script>